{
  "name": "@simpleviewinc/tap-resolver",
  "version": "1.0.0",
  "description": "Resolves tap files within the SV-Keg",
  "main": "babel.config.js",
  "author": "Lance Tipton",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf yarn.lock; rimraf package.lock; rimraf node_modules ",
    "test": "NODE_ENV=resolver-test jest",
    "test:reports": "yarn test --coverage && yarn view:reports",
    "view:reports": "open reports/coverage/lcov-report/index.html",
    "format:eslint": "eslint --config ./configs/eslintrc.config.js . --fix --quiet",
    "format:prettier": "prettier --config ./configs/prettier.config.js --ignore-path .eslintignore --write '**/*.{js,jsx}'",
    "format": "yarn format:prettier && yarn format:eslint",
    "eslint:watch": "onchange '**/*.{js,jsx}' -- eslint {{changed}} --fix"
  },
  "publishConfig": { 
    "registry": "https://npm.pkg.github.com/" 
  },
  "repository" : {
    "url": "ssh://git@github.com/simpleviewinc/tap-resolver.git",
    "type": "git"
  },
  "dependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.5.0",
    "babel-eslint": "10.1.0",
    "app-root-path": "^2.2.1",
    "babel-jest": "24.8.0",
    "babel-loader": "^8.0.6",
    "babel-preset-expo": "^8.0.0",
    "babel-plugin-module-resolver": "3.1.3",
    "babel-plugin-react-native-web": "^0.11.5",
    "babel-preset-react-native": "^4.0.1",
    "core-js": "3.1.4",
    "jest": "24.8.0",
    "jest-cli": "^24.8.0",
    "jsutils": "git+https://github.com/lancetipton/jsutils.git",
    "metro-react-native-babel-preset": "0.54.1",
    "react-test-renderer": "16.8.3",
    "rimraf": "2.6.3"
  },
  "devDependencies": {
    "babel-jest": "24.8.0",
    "jest": "24.8.0",
    "jest-cli": "^24.8.0",
    "react-test-renderer": "16.8.3",
    "onchange": "7.0.2",
    "prettier": "2.0.5",
    "eslint": "7.1.0",
    "eslint-plugin-jest": "23.13.2",
    "eslint-plugin-react": "7.20.0"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js?(x)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!**/mocks/**/*.{js,jsx}"
    ],
    "coverageDirectory": "reports/coverage",
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "es6"
    ],
    "verbose": true,
    "globals": {
      "__DEV__": true
    },
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.js"
    ]
  }
}
